    <Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
        <Windows>
            <!-- The basic sort button definition -->
            <Button name="ShiniesPostUI_SortButton" inherits="Shinies_Button_DefaultListSort">
                <Size>
                    <AbsPoint x="245" y="30" />
                </Size>
                <EventHandlers>
                    <EventHandler event="OnLButtonUp" function="ShiniesPostUI.OnLButtonUp_SortButton" />
                </EventHandlers>
            </Button>
            
            <EditBox name="ShiniesPostUI_GoldCoin_EditBox_DefaultFrame" inherits="Shinies_GoldCoin_EditBox_DefaultFrame">
                <EventHandlers>
                    <EventHandler event="OnTextChanged" function="ShiniesPostUI.OnPriceChange" />
                </EventHandlers>
            </EditBox>
            
            <EditBox name="ShiniesPostUI_SilverCoin_EditBox_DefaultFrame" inherits="Shinies_SilverCoin_EditBox_DefaultFrame">
                <TextOffset x="4" y="3" />
                <EventHandlers>
                    <EventHandler event="OnTextChanged" function="ShiniesPostUI.OnPriceChange" />
                </EventHandlers>
            </EditBox>
            
            <EditBox name="ShiniesPostUI_BrassCoin_EditBox_DefaultFrame" inherits="Shinies_BrassCoin_EditBox_DefaultFrame">
                <TextOffset x="4" y="3" />
                <EventHandlers>
                    <EventHandler event="OnTextChanged" function="ShiniesPostUI.OnPriceChange" />
                </EventHandlers>
            </EditBox>
            
            <EditBox name="ShiniesPostUI_Stacks_EditBox_DefaultFrame" font="font_chat_text" background="EA_FullResizeImage_TanBorder" scrolling="none" input="numbers" maxChars="3">
                <TextOffset x="4" y="3" />
                <EventHandlers>
                    <EventHandler event="OnTextChanged" function="ShiniesPostUI.OnStackChange" />
                </EventHandlers>
            </EditBox>
            
            <EditBox name="ShiniesPostUI_StackSize_EditBox_DefaultFrame" font="font_chat_text" background="EA_FullResizeImage_TanBorder" scrolling="none" input="numbers" maxChars="3">
                <TextOffset x="4" y="3" />
                <EventHandlers>
                    <EventHandler event="OnTextChanged" function="ShiniesPostUI.OnStackSizeChange" />
                </EventHandlers>
            </EditBox>
            
            <!-- The basic definition of a results entry -->
            <Window name="ShiniesPostUI_ResultsRow" drawchildrenfirst="true">
                <Size>
                    <AbsPoint x="750" y="22"/>
                </Size>
                <EventHandlers>
                    <EventHandler event="OnRButtonUp" 		function="ShiniesPostUI.OnRButtonUp_Results_ListItem" />
                    <EventHandler event="OnMouseOver"       function="ShiniesPostUI.OnMouseOver_Results_ListItem" />
                	<EventHandler event="OnMouseOverEnd"    function="ShiniesPostUI.OnMouseOverEnd_Results_ListItem" />
                </EventHandlers>
                <Windows>
                    <FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground">
                        <Anchors>
                            <Anchor point="topleft" relativePoint="topleft" />
                            <Anchor point="bottomright" relativePoint="bottomright" />
                        </Anchors>
                    </FullResizeImage>
                    <FullResizeImage name="$parentMouseover" texture="Shinies3pxBorder" layer="overlay" handleinput="false" showing="false" alpha="0.5">
                        <Anchors>
                            <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent"/>
                            <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent"/>
                        </Anchors>
                        <Sizes>
                            <TopLeft x="3" y="3" />
                            <BottomRight x="3" y="3" />
                            <Middle x="58" y="58" />
                        </Sizes>
                        <TexSlices>
                            <TopLeft      id="Border-Top-Left" />
                            <TopCenter    id="Border-Top-Center" />
                            <TopRight     id="Border-Top-Right" />
                            <MiddleLeft   id="Border-Middle-Left" />
                            <MiddleCenter id="Border-Middle-Center" />
                            <MiddleRight  id="Border-Middle-Right" />
                            <BottomLeft   id="Border-Bottom-Left" />
                            <BottomCenter id="Border-Bottom-Center" />
                            <BottomRight  id="Border-Bottom-Right" />
                        </TexSlices>
                        <TintColor r="0" g="240" b="24" />
                    </FullResizeImage>
                    <Label name="$parentPrice" inherits="Shinies_Default_Label_ClearSmallFont" maxchars="80" textalign="rightcenter" autoresize="false" autoresizewidth="false">
                        <Size>
                            <AbsPoint x="195" y="22"/>
                        </Size>
                        <Anchors>
                            <Anchor point="right" relativePoint="right" relativeTo="">
                                <AbsPoint x="-3" y="0"/>
                            </Anchor>
                        </Anchors>
                    </Label>
                    <Label name="$parentPricePer" inherits="Shinies_Default_Label_ClearSmallFont" maxchars="80" textalign="rightcenter" autoresize="false" autoresizewidth="false">
                        <Size>
                            <AbsPoint x="170" y="22"/>
                        </Size>
                        <Anchors>
                            <Anchor point="left" relativePoint="right" relativeTo="$parentPrice">
                                <AbsPoint x="0" y="0"/>
                            </Anchor>
                        </Anchors>
                    </Label>
                    <Label name="$parentTimeLeft" inherits="Shinies_Default_Label_ClearSmallFont" maxchars="80" textalign="center" autoresize="false" autoresizewidth="false">
                        <Size>
                            <AbsPoint x="95" y="22"/>
                        </Size>
                        <Anchors>
                            <Anchor point="left" relativePoint="right" relativeTo="$parentPricePer">
                                <AbsPoint x="0" y="0"/>
                            </Anchor>
                        </Anchors>
                    </Label>
                    <Label name="$parentStack" inherits="Shinies_Default_Label_ClearSmallFont" maxchars="80" textalign="center" autoresize="false" autoresizewidth="false">
                        <Size>
                            <AbsPoint x="95" y="22"/>
                        </Size>
                        <Anchors>
                            <Anchor point="left" relativePoint="right" relativeTo="$parentTimeLeft">
                                <AbsPoint x="0" y="0"/>
                            </Anchor>
                        </Anchors>
                    </Label>
                    <Label name="$parentSeller" inherits="Shinies_Default_Label_ClearSmallFont" maxchars="80" textalign="leftcenter" autoresize="false" autoresizewidth="false">
                        <Size>
                            <AbsPoint x="300" y="22"/>
                        </Size>
                        <Anchors>
                            <Anchor point="left" relativePoint="left" relativeTo="$parent">
                            	<AbsPoint x="2" y="0"/>
                            </Anchor>
                        </Anchors>
                    </Label>
                </Windows>
            </Window>
            <Window name="ShiniesPostUI" inherits="EA_Window_Default" handleinput="true" popable="true" movable="false" savesettings="false">
                <Size>
                    <AbsPoint x="800" y="500"/>
                </Size>
                <EventHandlers>
                    <EventHandler event="OnShown" 	function="ShiniesPostUI.OnShown" />
                    <EventHandler event="OnHidden" 	function="ShiniesPostUI.OnHidden" />
                </EventHandlers>
                <Windows>
                    <!-- This is the window that dipslays the current auctions for the item being auctioned -->
                    <Window name="$parent_Results">
                        <Windows>
                            <Button name="$parentPrice" inherits="ShiniesPostUI_SortButton" textalign="center" id="5">
                                <Size>
                                    <AbsPoint x="195" y="30" />
                                </Size>
                                <Anchors>
                                    <Anchor point="topright" relativePoint="bottomright" relativeTo="$parentList">
                                        <AbsPoint x="-20" y="0" />
                                    </Anchor>
                                </Anchors>
                            </Button>
                            <Button name="$parentPricePer" inherits="ShiniesPostUI_SortButton" textalign="center" id="4">
                                <Size>
                                    <AbsPoint x="170" y="30" />
                                </Size>
                                <Anchors>
                                    <Anchor point="topleft" relativePoint="topright" relativeTo="$parentPrice">
                                        <AbsPoint x="0" y="0" />
                                    </Anchor>
                                </Anchors>
                            </Button>
                            <Button name="$parentTimeLeft" inherits="ShiniesPostUI_SortButton" textalign="center" id="3">
                                <Size>
                                    <AbsPoint x="95" y="30" />
                                </Size>
                                <Anchors>
                                    <Anchor point="topleft" relativePoint="topright" relativeTo="$parentPricePer">
                                        <AbsPoint x="0" y="0" />
                                    </Anchor>
                                </Anchors>
                            </Button>
                            <Button name="$parentStack" inherits="ShiniesPostUI_SortButton" textalign="center" id="2">
                                <Size>
                                    <AbsPoint x="95" y="30" />
                                </Size>
                                <Anchors>
                                    <Anchor point="topleft" relativePoint="topright" relativeTo="$parentTimeLeft">
                                        <AbsPoint x="0" y="0" />
                                    </Anchor>
                                </Anchors>
                            </Button>
                            <Button name="$parentSeller" inherits="ShiniesPostUI_SortButton" textalign="center" id="1">
                                <Size>
                                    <AbsPoint x="200" y="30" />
                                </Size>
                                <Anchors>
                                    <Anchor point="topleft" relativePoint="topright" relativeTo="$parentStack">
                                       <AbsPoint x="0" y="0" />
                                    </Anchor>
                                    <Anchor point="topleft" relativePoint="bottomleft" relativeTo="$parentList">
                                       <AbsPoint x="0" y="0" />
                                    </Anchor>
                                </Anchors>
                            </Button>
                            <ListBox name="$parentList" scrollbar="EA_ScrollBar_DefaultVerticalChain" rowdef="ShiniesPostUI_ResultsRow" visiblerows="20" rowspacing="0">
                                <Anchors>
                                    <Anchor point="topleft" relativePoint="topleft" relativeTo="">
                                        <AbsPoint x="2" y="30" />
                                    </Anchor>
                                    <Anchor point="bottomright" relativePoint="bottomright">
                                        <AbsPoint x="0" y="0"/>
                                    </Anchor>
                                </Anchors>
                                <ListData table="ShiniesPostUI.listDisplayData" populationfunction="ShiniesPostUI.PopulateResultsDisplay"/>
                            </ListBox>
                        </Windows>
                    </Window>
                    <AnimatedImage name="$parent_SearchingAnim" inherits="LoadingScreenWarSymbolAnimation" layer="overlay" >
                        <Anchors>
                            <Anchor point="center" relativePoint="center" relativeTo="$parent_Results">
                                <AbsPoint x="0" y="0" />
                            </Anchor>
                        </Anchors>
                    </AnimatedImage>
                </Windows>
            </Window>
        </Windows>
    </Interface>